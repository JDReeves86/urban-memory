<div class="container p-6">
    <!-- Start blog post content here -->
    {{#each posts as |post|}}
    <article class="media">
        <figure class="media-left">
            <p class="image is-48x48">
              <img src="https://bulma.io/images/placeholders/96x96.png">
            </p>
        </figure>
        <div class="media-content">
            <div class="content">
                <p>
                    <strong>{{post.user.user_name}}</strong>
                    <br>
                    {{post.post}}
                    <br>
                    <small><a>Comment</a></small>
                </p>
            </div>

<!-- Start comment insert loaded comments into here-->
            <article class="media">
                <figure class="media-left">
                    <p class="image is-48x48">
                      <img src="https://bulma.io/images/placeholders/96x96.png">
                    </p>
                </figure>
                <div class="media-content">
                    <div class="content">
                        <p>
                            <strong>Jessica Reeves</strong>
                            <br>
                            Comments on existing blog post
                            <br>
                            <small><a>Comment</a></small>
                        </p>
                    </div>
                </div>
            </article>
<!-- End comment -->
        </div>
    </article>
    {{/each}}
</div>