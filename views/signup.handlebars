<div class="columns p-6 has-background-primary-light">
    <div class="column is-4">
        <form>
            <div class="field">
                <label class="label">Enter a username</label>
                <div class="field">
                    <div class="control">
                        <input class="input" type="text"  id="userName">
                    </div>
                </div>

                <label class="label">Enter your e-mail address</label>
                <div class="field">
                    <div class="control">
                        <input class="input" type="text" id="email">
                    </div>
                </div>

                <label class="label">Select a password</label>
                <div class="field">
                    <div class="control">
                        <input class="input" type="text" id="password">
                    </div>
                </div>
                
                <div class="control">
                    <button class="button is-primary" id="makeAccount">Make account</button>
                </div>
            </div>
        </form>
    </div>
</div>

